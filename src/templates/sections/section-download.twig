{#
title: Basic section
#}

{% set features = site.data['features.json'] %}

{% embed "@templates/layouts/section.twig"  %}

{% block header %}
<h3 class="section-title">The App</h3>
{% endblock %}

{% block content %}
<div class="intro-content">
  <p class="intro-paragraph">Remember where you&rsquo;ve been and see if you&rsquo;ve encountered anyone diagnosed with COVID-19. Designed with security as the No. 1 priority.</p>
</div>

<div class="intro-content section-art">
  <img src="/static/img/app-screenshot.png" alt="Private Kit app screenshot" />
</div>

<div class="topper-section">
  {% for feature in features %}
  <div class="topper-section--col topper-feature">
    {% include '@templates/partials/numbered-feature.twig' with {
      'title': feature.title, 
      'description': feature.description
      }
    %}
  </div>
  {% endfor %}

</div>
{% endblock %}

{% endembed %}