{#
title: Whitepapers section
#}

{% extends "@templates/layouts/section.twig" %}

{% set whitepapers = site.data['whitepapers.json'].whitepapers %}

{% block header %}
<h3 class="section-title">The Whitepaper</h3>
{% endblock %}

{% block content %}
<div class="whitepapers-content">
  {% for whitepaper in whitepapers %}
    <div class="whitepapers-content-block">
     {% include '@templates/partials/whitepaper.twig' with { whitepaper } %}
    </div>
  {% endfor %}
</div>
{% endblock %}